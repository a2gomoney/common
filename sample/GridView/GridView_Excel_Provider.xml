/**
 * @component
 * @componentName udc_GridView_Excel_Provider
 * @pluginName
 * @company
 * @developer
 * @category /ui/SP/GridView
 * @notSupportBrowser
 * @version
 * @htmlRender
 * @icon
 * @disableIcon
 * @description
 * @width
 * @height
 * @license
 * @imagePath
 * @homepage
 */

/**
 * @event
 * @name onpageload
 * @description 초기 스크립트 수행 함수 정의
 */
scwin.onpageload = function () {
    dma_search.set("START_IDX", "1");
    dma_search.set("END_IDX", "10");
    $c.sbm.execute(sbm_search);
};

/**
 * @event
 * @name sbm_search_submitdone
 * @description sbm_search submission submitdone 이벤트 스크립트로 pageList를 설정한다.
 * @param {Object} e Submission객체
 */
scwin.sbm_search_submitdone = function (e) {
    grd_pagingGrid.setStartRowNumber(parseInt(dma_search_excel.get("START_IDX")) - 1);
    const idx = dma_search_excel.get("START_IDX");
    const totalCnt = e.responseJSON.dlt_zipCode_count;

    if (idx == "1") {
        const pageSize = Math.ceil(totalCnt / 10);

        if ($c.num.parseInt(e.responseJSON.dlt_zipCode_count) > 0) {
            pgl_list.show("");
        } else {
            pgl_list.hide();
        }
        pgl_list.setCount(pageSize);
    }

    if (!$c.util.isEmpty(totalCnt)) {
        scwin.setRowCnt(totalCnt);
    }
};

/**
 * @event
 * @name btn_removeData_onclick
 * @description dlt_zipCode 데이타를 삭제한다.
 */
scwin.btn_removeData_onclick = function () {
    dlt_zipCode.removeAll();
    scwin.setRowCnt();

};

/**
 * @event
 * @name btn_excelProvider_onclick
 * @description 그리드에 표현된 데이타를 Excel( Provider )로 다운로드 한다. Provider 사용법은 아래의 스크립트 내용을 참고 바랍니다.
 */
scwin.btn_excelProvider_onclick = function () {
    let option = {};
    const info = {};
    option.fileName = "data.xlsx";
    option.useProvider = true;
    option.showProcess = "true";
    option.providerRequestXml = scwin.setProviderData("zipCodeService", "selectZipCodeStreetByStreet", dma_search_excel);
    $c.data.downloadGridViewExcel(grd_pagingGrid, option, info);
};

/**
 * @method
 * @name setProviderData
 * @description Provider 데이터를 셋팅한다.
 * @param {String} service 서비스명
 * @param {String} method 메소드명
 * @param {Object} paramMap 데이터 셋팅을 위한 DataMap 객체
 */
scwin.setProviderData = function (service, method, paramMap) {
    const serviceXml = "<service>" + service + "</service>";
    const methodXml = "<method>" + method + "</method>";
    const paramXml = "<param>" + JSON.stringify(paramMap.getJSON()) + "</param>";
    return "<data>" + serviceXml + methodXml + paramXml + "</data>";
};

/**
 * @method
 * @name setRowCnt
 * @description gridView에 데이터가 업데이트될 때마다 해당 row의 개수를 업데이트한다.
 * @param {string} total 서버에서 받아온 데이터의 전체 개수
 * @hidden N
 */
scwin.setRowCnt = function (total) {
    const totalCnt = dlt_zipCode.getTotalRow();
    const currentCnt = dlt_zipCode.getRowCount();
    if (totalCnt == 0) {
        spn_totalCnt.setValue(totalCnt)
        spn_currCnt.setValue(currentCnt);
    } else {
        spn_totalCnt.setValue(total)
        spn_currCnt.setValue(currentCnt);
    }
};

/**
 * @event
 * @name pgl_list_onchange
 * @description 페이지 리스트가 변경될 때의 이벤트
 * @param {Number} current 현재 페이지 번호
 * @param {Number} before 이전에 위치한 페이지 번호
 */
scwin.pgl_list_onchange = function (current, before) {
    dma_search.set("START_IDX", ((current - 1) * 10 + 1) + "");
    dma_search.set("END_IDX", (current * 10) + "");
    $c.sbm.execute(sbm_search);
};

/**
 * @event
 * @name btn_excelSplitProvider_onclick
 * @description Excel Split Provider를 이용하여 GridView의 데이터를 액셀 다운로드 한다.
 * @param {Number} current 현재 페이지 번호
 * @param {Number} before 이전에 위치한 페이지 번호
